#!/bin/bash
function respring {	
	declare -a cydia
	cydia=($CYDIA)

	if [[ ${CYDIA+@} ]]; then
		eval "echo 'finish:restart' >&${cydia[0]}"
	else
		echo "Respring lÅ«dzu."
		killall springboard
	fi
}

function remove_core {
	target="lv.kristapsausters.keyaddons.core"
	dpkg -r $package_path
}

remove_core
respring

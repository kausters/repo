#!/bin/bash
function respring {	
	declare -a cydia
	cydia=($CYDIA)

	if [[ ${CYDIA+@} ]]; then
		eval "echo 'finish:restart' >&${cydia[0]}"
	else
		echo "Respring lÅ«dzu."
		killall springboard
	fi
}

function remove_core {
	IFS='.' read -ra version <<< "`sw_vers -productVersion`"
	package="/var/root/Library/${1}/${version[0]}"
	cd $package && ./configure remove
}

remove_core
respring
